    [JSInvokable]
    public async Task RequestTaskDelete(int id) => await DeleteTask(id); // JS → C#: удалить задачу

    [JSInvokable]
    public async Task RequestTaskRename(int id, string name)
    {
        if (string.IsNullOrWhiteSpace(name))          // если пустое имя
            return;                                   // выходим

        using var conn = Db.GetConnection();          // подключение
        await conn.OpenAsync();                       // открываем

        string sql = @"UPDATE tasks SET name = :n WHERE id_task = :id"; // SQL обновления названия

        using var cmd = new Npgsql.NpgsqlCommand(sql, conn);           // команда
        cmd.Parameters.AddWithValue("n", name);                        // новое имя
        cmd.Parameters.AddWithValue("id", id);                         // id_task
        await cmd.ExecuteNonQueryAsync();                              // выполняем

        await LoadTasksAsync();                                       // перегружаем задачи
        StateHasChanged();                                            // обновляем UI
    }

    // -----------------------------
    // JS INIT (привязка событий к строкам)
    // -----------------------------
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (Tasks_ == null)                          // если задач нет
            return;                                  // выходим

        foreach (var t in Tasks_)                    // для каждой задачи
            await JS.InvokeVoidAsync("TasksInterop.bindRowEventsById", t.IdTask); // привязка JS-событий

        if (firstRender)                             // только при первом рендере
        {
            selfObj = DotNetObjectReference.Create(this);            // создаём ссылку на компонент
            await JS.InvokeVoidAsync("TasksInterop.setComponent", selfObj); // передаём её в JS
        }
    }
}
