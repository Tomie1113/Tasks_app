    private async Task DeleteTask(int id)
    {
        System.Diagnostics.Debug.WriteLine("======================================");
        System.Diagnostics.Debug.WriteLine($"[Tasks] >>> НАЧАТЬ УДАЛЕНИЕ ЗАДАЧИ ID={id}");
        System.Diagnostics.Debug.WriteLine("======================================");

        try
        {
            using var conn = Db.GetConnection();
            await conn.OpenAsync();
            System.Diagnostics.Debug.WriteLine("[Tasks] Подключение к БД ОК");

            // ============================
            // 1) УДАЛЕНИЕ СВЯЗЕЙ С ТЕГАМИ
            // ============================

            {
                string sql = "DELETE FROM task_tags WHERE id_task = :id";
                System.Diagnostics.Debug.WriteLine($"[Tasks] Удаляем связи с тегами: {sql}");

                using var cmd = new NpgsqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("id", id);

                int rows = await cmd.ExecuteNonQueryAsync();
                System.Diagnostics.Debug.WriteLine($"[Tasks] Связей tag удалено: {rows}");
            }

            // =================================
            // 2) УДАЛЕНИЕ СВЯЗЕЙ С КОНТЕСТАМИ
            // =================================

            {
                string sql = "DELETE FROM task_contests WHERE id_task = :id";
                System.Diagnostics.Debug.WriteLine($"[Tasks] Удаляем связи с контестами: {sql}");

                using var cmd = new NpgsqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("id", id);

                int rows = await cmd.ExecuteNonQueryAsync();
                System.Diagnostics.Debug.WriteLine($"[Tasks] Связей contests удалено: {rows}");
            }

            // ============================
            // 3) УДАЛЕНИЕ САМОЙ ЗАДАЧИ
            // ============================

            {
                string sql = "DELETE FROM tasks WHERE id_task = :id";
                System.Diagnostics.Debug.WriteLine($"[Tasks] Удаляем задачу: {sql}");

                using var cmd = new NpgsqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("id", id);

                int rows = await cmd.ExecuteNonQueryAsync();
                System.Diagnostics.Debug.WriteLine($"[Tasks] Задача удалена, затронуто строк: {rows}");
            }

            // ============================
            // 4) ОБНОВЛЕНИЕ СПИСКА
            // ============================

            System.Diagnostics.Debug.WriteLine("[Tasks] Обновляем список задач...");
            await LoadTasksAsync();
            StateHasChanged();

            System.Diagnostics.Debug.WriteLine("======================================");
            System.Diagnostics.Debug.WriteLine($"[Tasks] >>> УДАЛЕНИЕ ЗАДАЧИ ID={id} ЗАВЕРШЕНО");
            System.Diagnostics.Debug.WriteLine("======================================");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine("!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!");
            System.Diagnostics.Debug.WriteLine("[Tasks] ОШИБКА ПРИ УДАЛЕНИИ ЗАДАЧИ");
            System.Diagnostics.Debug.WriteLine($"[Tasks] Тип: {ex.GetType()}");
            System.Diagnostics.Debug.WriteLine($"[Tasks] Сообщение: {ex.Message}");
            System.Diagnostics.Debug.WriteLine($"[Tasks] StackTrace: {ex.StackTrace}");
            System.Diagnostics.Debug.WriteLine("!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!");

            throw;
        }
    }




